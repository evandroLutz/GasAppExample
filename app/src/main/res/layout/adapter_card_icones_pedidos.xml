<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/butGreen">


        <TextView
            android:id="@+id/pedidosValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imageView3"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="132dp"
            android:layout_marginEnd="159dp"
            android:background="@color/butGreen"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/endereco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="254dp"
            android:background="@color/butGreen"
            android:text="End. de entrega"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="253dp"
            android:background="@color/butGreen"
            android:text="Nome"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/preco"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="100dp"
            android:background="@color/butGreen"
            android:text="Valor Total"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/nomeValor"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="156dp"
            android:layout_marginTop="20dp"
            android:background="@color/butGreen"
            android:text="TextView"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/enderecoValor"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="156dp"
            android:layout_marginTop="64dp"
            android:background="@color/butGreen"
            android:text="TextView"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/valorTotalValor"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="156dp"
            android:layout_marginTop="100dp"
            android:background="@color/butGreen"
            android:text="TextView"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="139dp"
            android:layout_height="98dp"
            android:layout_below="@+id/valorTotalValor"
            android:layout_alignParentStart="true"
            android:layout_marginStart="240dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/recibo" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
